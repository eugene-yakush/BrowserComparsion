<Window x:Class="BrowserComparsion.PerformanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrowserComparsion"
        mc:Ignorable="d"
        Title="Performance" Height="300" Width="300">
    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <Button Name="StartBtn" Click="StartBtn_OnClick">Start</Button>
                <Button Name="StopBtn" Click="StopBtn_OnClick"> Stop</Button>
            </StackPanel>
            <DataGrid Name="ResultGrid" AutoGenerateColumns="True"></DataGrid>
        </DockPanel>
    </Grid>
</Window>
